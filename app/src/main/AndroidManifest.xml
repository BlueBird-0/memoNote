<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ShortMemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name ="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher"
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="whateverString">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8004776504808264~7066223224"/>

        <activity
            android:name="com.example.ShortMemo.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.ShortMemo.WriteActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.example.ShortMemo.record.RecordActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.example.ShortMemo.OptionActivity"
            android:windowSoftInputMode="adjustResize"/>



        <receiver android:name="com.example.ShortMemo.accessibility.BroadcastReceiverApp"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".accessibility.WidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/layout_widget_provider"/>
        </receiver>
        <service android:name=".accessibility.WidgetRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <service android:enabled="true"
            android:name="com.example.ShortMemo.accessibility.BackgroundService"/>
        <service android:enabled="true"
            android:exported="false"
            android:name="com.example.ShortMemo.accessibility.FloatingViewService"/>
    </application>

</manifest>